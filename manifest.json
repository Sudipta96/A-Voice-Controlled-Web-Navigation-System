{
  "manifest_version": 3,
  "name": "Voice Search Assistant",
  "version": "1.1",
  "description": "Search the internet using your voice!",
  "permissions": ["scripting", "tabs"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["http://*/*", "https://*/*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["recognizer.html", "recognizer.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
