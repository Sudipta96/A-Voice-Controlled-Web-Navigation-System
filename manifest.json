{
  "manifest_version": 3,
  "name": "Voice Controlled Web Navigation",
  "version": "1.0",
  "description": "Start/stop voice recognition from the toolbar icon.",
  "permissions": ["storage", "scripting", "tabs", "activeTab", "contextMenus"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/mic-off16.png",
      "32": "icons/mic-off32.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "content/test_results.js",
        "content/utils.js",
        "content/mic-ui.js",
        "content/media.js",
        "content/tab.js",
        "content/form.js",
        "content/links.js",
        "content/search.js",
        "content/speak.js",
        "content/commands-handler.js",
        "content/core.js",
        "content/content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "commands/en.json",
        "commands/bn.json",
        "commands/links.json"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
